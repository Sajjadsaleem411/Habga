<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50E1C4"
    tools:context="com.karigar.hubgaclient.ui.activity.ResetPassActivity">

  <ImageView
      android:id="@+id/Iv"
      android:layout_width="140dp"
      android:layout_height="120dp"
      android:layout_marginLeft="90dp"
      android:layout_marginBottom="10dp"
      android:layout_marginTop="10dp"
      android:src="@drawable/innerlogo"/>
    <TextView
        android:id="@+id/restText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Iv"
        android:layout_marginLeft="10dp"
        android:text="Reset Your Password"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#D33B6F"/>
    <ImageView
        android:id="@+id/Iv1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/restText"
        android:layout_centerInParent="true"
        android:src="@drawable/resetpasswordicon"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/passtext"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/Iv1"
        android:hint="Set New Password"
        android:inputType="textPassword"
        android:textColorHint="#99000000"
        android:gravity="center"
        android:maxLength="18"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="#55FFFFFF"
        android:textColor="#000000"
        />
    <EditText
        android:id="@+id/passtext1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/passtext"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:hint="Confirm New Password"
        android:inputType="textPassword"
        android:textColorHint="#99000000"
        android:gravity="center"
        android:maxLength="18"
        android:background="#55FFFFFF"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/rstbtn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/passtext1"
        android:background="@drawable/changensavepasswordbutton"
        />

</RelativeLayout>
